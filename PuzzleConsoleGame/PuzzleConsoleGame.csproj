        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="NAudio" Version="2.2.1" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Assets\Audio\Effects\can.mp3" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Assets\Effects\can.mp3" />
